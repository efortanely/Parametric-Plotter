import java.awt.Color;
import java.awt.Graphics;
import java.awt.Polygon;

public class PlottablePoint {
	private Polygon render2D;
	private Vector normal;
	Color c = Color.blue;
	
	public PlottablePoint(Polygon p, Vector n){
		render2D = p;
		normal = n;
	}
	
	public void setColor(Color c){
		this.c = c;
	}
	
	public void draw(Graphics g, double θ, double φ, Color fill, Color outline){
		g.setColor(fill);
		g.fillPolygon(render2D);
		g.setColor(outline);
		g.drawPolygon(render2D);
	}
	
	public void draw(Graphics g, double θ, double φ){
		draw(g,θ,φ,c,Color.black);
	}
	
	public void draw(Graphics g, double θ, double φ, Color fill, Color outline, Color normals){
		draw(g,θ,φ,fill,outline);
		g.setColor(normals);
		normal.drawVector(g,θ,φ);
	}
	
	public Polygon getPlane(){
		return render2D;
	}
	
	public Vector getNormal(){
		return normal;
	}
	
}
